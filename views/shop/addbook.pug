extend ../layout/common.pug 
block content
    h1.text-center New book
    .container
        form(action='', method='POST', enctype='multipart/form-data')
            .form-group
                label(for='title') Title:
                input.form-control(type='text', name='title')
            .form-group
                label(for='description') Description:
                input.form-control(type='text', name='description')
            .form-group
                    label(for='bookcover') Book Cover
                    input#bookcover_upload.form-control-file(name='bookcover', type='file', required )
            button.btn.btn-primary(type='submit') Add into shop